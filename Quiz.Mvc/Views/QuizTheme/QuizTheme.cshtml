@model IEnumerable<QuizData.Models.QuizTheme>
@{
    ViewData["Title"] = "Quiz Themes";
    Layout = "_Layout";
}
<table class="table table-sm table-striped">
    <thead>
    <tr><th>ID</th><th>Name</th><th>Category</th><th>Price</th></tr>
    </thead>
    <tbody>
    @foreach (var quiztheme in Model) {
        <tr>
            <td>@quiztheme.QuizID</td>
            <td>@quiztheme.QuizThemeName</td>
            <td>
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit"
                       class="btn btn-sm btn-warning" asp-route-id="@quiztheme.QuizID">
                        Edit
                    </a>
                    <input type="hidden" name="id" value="@quiztheme.QuizID" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Product</a>