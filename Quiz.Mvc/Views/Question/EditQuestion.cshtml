@model QuizMvc.Models.QuestionData
@using System.Collections

@{
    ViewData["Title"] = ViewBag.CreateMode ? "Create" : "Edit";
    Layout = "_Layout";
}

<form asp-action="@(ViewBag.CreateMode ? "Create" : "Edit")" method="post">
    <div class="form-group">
        <label for="sel1">Quiz</label>
        <select class="form-control" asp-for="QuizID" asp-items="@(new SelectList((IEnumerable)ViewData["Quizes"], "ID", "QuizName"))"></select>
               
        <br/>
        
        <label for="sel1">Quiz Theme</label>
        <select class="form-control" asp-for="QuizThemeID" asp-items="@(new SelectList((IEnumerable)ViewData["QuizThemes"], "ID", "QuizThemeName"))"></select>
               
        <br/>

        <label for="sel1">Question Type</label>
        <select class="form-control" asp-for="QuestionTypeID" asp-items="@(new SelectList((IEnumerable)ViewData["QuestionTypes"], "ID", "QuestionTypeName"))"></select>
        
        <br/>
        
        <label for="sel1">Answer Type</label>
        <select class="form-control" asp-for="AnswerTypeID" asp-items="@(new SelectList((IEnumerable)ViewData["AnswerTypes"], "ID", "AnswerTypeName"))"></select>
       
        <br/>

        <label for="sel1">Question Image</label>
        <input asp-for="QuestionImage" class="form-control"/>
        
        <br/>
        
        <label for="sel1">Correct Answer</label>
        <input asp-for="CorrectAnswer" class="form-control"/>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>